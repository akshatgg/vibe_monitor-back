{
  "family": "vm-api-ENV_PLACEHOLDER",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID_PLACEHOLDER:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID_PLACEHOLDER:role/ecsAppTaskRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "ACCOUNT_ID_PLACEHOLDER.dkr.ecr.us-west-1.amazonaws.com/vm-api:IMAGE_TAG_PLACEHOLDER",
      "essential": true,
      "portMappings": [{"containerPort": 8000, "protocol":"tcp"}],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/vm-api-logs-ENV_PLACEHOLDER",
          "awslogs-region": "us-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "secrets": [
        {"name": "ENVIRONMENT", "valueFrom": "/vm-api-ENV_PLACEHOLDER/environment"},
        {"name": "API_BASE_URL", "valueFrom": "/vm-api-ENV_PLACEHOLDER/api-base-url"},
        {"name": "JWT_SECRET_KEY", "valueFrom": "/vm-api-ENV_PLACEHOLDER/jwt-secret-key"},
        {"name": "DATABASE_URL", "valueFrom": "/vm-api-ENV_PLACEHOLDER/database-url"},
        {"name": "ALLOWED_ORIGINS", "valueFrom": "/vm-api-ENV_PLACEHOLDER/allowed-origins"},
        {"name": "GOOGLE_CLIENT_ID", "valueFrom": "/vm-api-ENV_PLACEHOLDER/google-client-id"},
        {"name": "GOOGLE_CLIENT_SECRET", "valueFrom": "/vm-api-ENV_PLACEHOLDER/google-client-secret"},
        {"name": "SUPABASE_ANON_KEY", "valueFrom": "/vm-api-ENV_PLACEHOLDER/supabase-anon-key"},
        {"name": "SUPABASE_SERVICE_KEY", "valueFrom": "/vm-api-ENV_PLACEHOLDER/supabase-service-key"},
        {"name": "POSTMARK_SERVER_TOKEN", "valueFrom": "/vm-api-ENV_PLACEHOLDER/postmark-server-token"},
        {"name": "SCHEDULER_SECRET_TOKEN", "valueFrom": "/vm-api-ENV_PLACEHOLDER/scheduler-secret-token"},
        {"name": "GROQ_API_KEY", "valueFrom": "/vm-api-ENV_PLACEHOLDER/groq-api-key"},
        {"name": "GROQ_LLM_MODEL", "valueFrom": "/vm-api-ENV_PLACEHOLDER/groq-llm-model"},
        {"name": "GEMINI_API_KEY", "valueFrom": "/vm-api-ENV_PLACEHOLDER/gemini-api-key"},
        {"name": "GEMINI_LLM_MODEL", "valueFrom": "/vm-api-ENV_PLACEHOLDER/gemini-llm-model"},
        {"name": "LOG_LEVEL", "valueFrom": "/vm-api-ENV_PLACEHOLDER/log-level"},
        {"name": "AWS_REGION", "valueFrom": "/vm-api-ENV_PLACEHOLDER/aws-region"},
        {"name": "SQS_QUEUE_URL", "valueFrom": "/vm-api-ENV_PLACEHOLDER/sqs-queue-url"},
        {"name": "WEB_APP_URL", "valueFrom": "/vm-api-ENV_PLACEHOLDER/web-app-url"},
        {"name": "CRYPTOGRAPHY_SECRET", "valueFrom": "/vm-api-ENV_PLACEHOLDER/cryptography-secret"},
        {"name": "SLACK_SIGNING_SECRET", "valueFrom": "/vm-api-ENV_PLACEHOLDER/slack-signing-secret"},
        {"name": "SLACK_CLIENT_ID", "valueFrom": "/vm-api-ENV_PLACEHOLDER/slack-client-id"},
        {"name": "SLACK_CLIENT_SECRET", "valueFrom": "/vm-api-ENV_PLACEHOLDER/slack-client-secret"},
        {"name": "GITHUB_APP_NAME", "valueFrom": "/vm-api-ENV_PLACEHOLDER/github-app-name"},
        {"name": "GITHUB_APP_ID", "valueFrom": "/vm-api-ENV_PLACEHOLDER/github-app-id"},
        {"name": "GITHUB_CLIENT_ID", "valueFrom": "/vm-api-ENV_PLACEHOLDER/github-client-id"},
        {"name": "GITHUB_PRIVATE_KEY_PEM", "valueFrom": "/vm-api-ENV_PLACEHOLDER/github-private-key-pem"},
        {"name": "GITHUB_WEBHOOK_SECRET", "valueFrom": "/vm-api-ENV_PLACEHOLDER/github-webhook-secret"},
        {"name": "OTEL_ENABLED", "valueFrom": "/vm-api-ENV_PLACEHOLDER/otel-enabled"},
        {"name": "OTEL_OTLP_ENDPOINT", "valueFrom": "/vm-api-ENV_PLACEHOLDER/otel-otlp-endpoint"},
        {"name": "HOSTNAME", "valueFrom": "/vm-api-ENV_PLACEHOLDER/hostname"},
        {"name": "SENTRY_DSN", "valueFrom": "/vm-api-ENV_PLACEHOLDER/sentry-dsn"},
        {"name": "ENGAGEMENT_SLACK_WEBHOOK_URL", "valueFrom": "/vm-api-ENV_PLACEHOLDER/engagement-slack-webhook-url"},
        {"name": "GITHUB_OAUTH_CLIENT_ID", "valueFrom": "/vm-api-ENV_PLACEHOLDER/github-oauth-client-id"},
        {"name": "GITHUB_OAUTH_CLIENT_SECRET", "valueFrom": "/vm-api-ENV_PLACEHOLDER/github-oauth-client-secret"}
      ]
    }
  ]
}
