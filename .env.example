# Environment
ENVIRONMENT=dev
API_BASE_URL=http://localhost:8000

# Supabase (for production use hosted Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Database (for development, docker-compose will use PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:54322/postgres

# ClickHouse
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=vibemonitor

# Redis
REDIS_URL=redis://localhost:6379

# GitHub App Configuration (from your GitHub App settings)
GITHUB_APP_ID=123456
GITHUB_APP_PRIVATE_KEY=base64-encoded-private-key
GITHUB_APP_WEBHOOK_SECRET=your-webhook-secret
GITHUB_CLIENT_ID=your-github-app-client-id
GITHUB_CLIENT_SECRET=your-github-app-client-secret

# API Keys
GROQ_API_KEY=your-groq-api-key

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_DEFAULT_CHANNEL=#alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email Configuration (Optional for development)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@vibemonitor.ai
FROM_NAME=Vibemonitor

# Security
SECRET_KEY=your-secret-key-change-in-production

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "https://vibemonitor.ai"]

#Onboarding
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback